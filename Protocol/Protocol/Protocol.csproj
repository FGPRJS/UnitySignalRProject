    <Nullable>enable</Nullable>
    <Configurations>Debug;ReleaseServer;ReleaseClient</Configurations>
  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(Platform)'=='ReleaseClient|AnyCPU'">
