  </PropertyGroup>

  <PropertyGroup Condition="'$(Configuration)|$(TargetFramework)|$(Platform)'=='ReleaseServer|netstandard2.1|AnyCPU'">
    <Optimize>True</Optimize>
  </PropertyGroup>

</Project>
